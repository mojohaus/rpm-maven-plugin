<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>bar</groupId>
	<artifactId>project-rpm-3</artifactId>
	<version>1.2</version>
	<packaging>rpm</packaging>
	<organization>
		<name>my org</name>
		<url>www.my.org</url>
	</organization>
	<inceptionYear>2009</inceptionYear>
	<dependencies>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>juli</artifactId>
            <version>6.0.16</version>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>servlet-api</artifactId>
            <version>6.0.16</version>
        </dependency>
		<dependency>
			<groupId>org.jvnet.hudson.main</groupId>
			<artifactId>hudson-war</artifactId>
			<version>1.255</version>
			<type>war</type>
		</dependency>
		
		<!-- TEST -->
	</dependencies>
	<repositories>
		<repository>
			<id>java.net</id>
			<url>http://download.java.net/maven/2</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>testing</version>
				<extensions>true</extensions>
				<configuration>
					<distribution>My App</distribution>
					<group>Application/Collectors</group>
					<defineStatements>
						<defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
					</defineStatements>
					<needarch>someArch</needarch>
					<targetOS>someOS</targetOS>
					<defaultUsername>myuser</defaultUsername>
                    <defaultGroupname>mygroup</defaultGroupname>
                    <mappings>
                        <mapping>
                            <directory>/usr/myusr/app</directory>
                        </mapping>
                        <mapping>
                            <directory>/usr/myusr/app2</directory>
                            <sources>
                                <softlinkSource>
                                    <location>/usr/myusr/app</location>
                                </softlinkSource>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/myusr</directory>
                            <sources>
                                <softlinkSource>
                                    <location>/usr/myusr/app</location>
                                    <destination>app3</destination>
                                </softlinkSource>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/init.d</directory>
                            <directoryIncluded>false</directoryIncluded>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <softlinkSource>
                                    <location>/usr/myusr/app/bin/start.sh</location>
                                    <destination>myapp</destination>
                                </softlinkSource>
                            </sources>
                        </mapping>
                        <!-- dependencies -->
                        <mapping>
                            <directory>/usr/myusr/app/lib</directory>
                            <dependency>
                                <includes>
                                    <include>org.jvnet.hudson.main:hudson-war</include>
                                </includes>
                            </dependency>
                        </mapping>
                        <mapping>
                            <directory>/usr/myusr/app/lib2</directory>
                            <dependency>
                                <includes>
                                    <include>org.apache.tomcat:*</include>
                                </includes>
                            </dependency>
                        </mapping>
                        <!-- scripts -->
                        <mapping>
                            <directory>/usr/myusr/app/bin</directory>
                            <filemode>755</filemode>
                            <recurseDirectories>true</recurseDirectories>
                            <sources>
                                <source>
                                    <location>src/main/bin2/rename.sh</location>
                                    <destination>name.sh</destination>
                                </source>
                                <source>
                                    <location>src/main/bin</location>
                                    <excludes>
                                       <exclude>*install.sh</exclude>
                                    </excludes>
                                </source>
                                <source>
                                    <location>src/main/bin2/rename.sh</location>
                                    <destination>name-someOS.sh</destination>
                                    <targetOSName>.*OS</targetOSName>
                                </source>
                                <source>
                                    <location>src/main/bin2/rename.sh</location>
                                    <destination>name-linux.sh</destination>
                                    <targetOSName>linux</targetOSName>
                                </source>
                                <source>
                                    <location>src/main/bin2/rename.sh</location>
                                    <destination>name-someArch.sh</destination>
                                    <targetArchitecture>.*Arch</targetArchitecture>
                                </source>
                                <source>
                                    <location>src/main/bin2/rename.sh</location>
                                    <destination>name-x86.sh</destination>
                                    <targetArchitecture>i386</targetArchitecture>
                                </source>
                                <softlinkSource>
                                    <location>/usr/myusr/app/bin/name.sh</location>
                                    <destination>oldname.sh</destination>
                                </softlinkSource>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScript>src/main/bin/preinstall.sh</preinstallScript>
                    <requires>
                        <require>/bin/sh</require>
                        <require>jre &gt;= 1.5</require>
                        <require>BASE_PACKAGE</require>
                    </requires>
                    <obsoletes>
                        <obsolete>project</obsolete>
                    </obsoletes>
                    <prereqs>
                        <prereq>dependency</prereq>
                    </prereqs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
